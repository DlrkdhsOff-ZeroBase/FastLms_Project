<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zero.fastlms.course.mapper.TakeCourseMapper">

    <select id="selectListCount" resultType="long">
        select count(*) from take_course
    </select>

    <select id="selectList" resultType="com.zero.fastlms.course.dto.TakeCourseDto">
        select tc.*
            , c.subject
            , m.user_name
            , m.phone
        from take_course tc
            join course c on tc.course_id = c.id
            join member m on tc.user_id = m.user_id
        where 1 = 1
        order by reg_dt desc
        limit #{pageStart}, #{pageEnd}
    </select>



    <sql id="selectListWhere">
        <if test="searchType != null and searchValue != null">
            <choose>
                <when test="searchType == 'userId'">
                    where user_id like concat('%', #{searchValue}, '%')
                </when>
                <when test="searchType == 'userName'">
                    where user_name like concat('%', #{searchValue}, '%')
                </when>
                <when test="searchType == 'phone'">
                    where phone like concat('%', #{searchValue}, '%')
                </when>
                <otherwise>
                    where (
                    user_id like concat('%', #{searchValue}, '%')
                    or
                    user_name like concat('%', #{searchValue}, '%')
                    or
                    phone like concat('%', #{searchValue}, '%')
                    )
                </otherwise>
            </choose>
        </if>
    </sql>

</mapper>